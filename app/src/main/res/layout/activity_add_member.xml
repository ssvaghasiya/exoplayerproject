<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewClickHandler"
            type="com.newproject.ui.addmember.viewmodel.AddMemberViewModel.ViewClickHandler" />

        <variable
            name="viewModel"
            type="com.newproject.ui.addmember.viewmodel.AddMemberViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.addmember.view.AddMemberActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp">

                <com.newproject.custom.CTextViewB
                    style="@style/txt_000_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Surname" />

                <Spinner
                    android:id="@+id/spinnerSurName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overlapAnchor="false"
                    android:popupBackground="@color/white"
                    android:spinnerMode="dropdown" />

                <com.newproject.custom.CTextViewB
                    style="@style/txt_000_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Main Member Phone No." />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spinnerMainMemberPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.newproject.custom.CTextViewB
                    style="@style/txt_000_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="age" />

                <com.newproject.custom.CEditTextView
                    android:id="@+id/edtAge"
                    style="@style/txt_000_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="surname"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />


                <com.newproject.custom.CTextViewB
                    style="@style/txt_000_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="dob" />

                <com.newproject.custom.CEditTextView
                    android:id="@+id/edtDOB"
                    style="@style/txt_000_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="surname"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />

                <com.newproject.custom.CTextViewB
                    style="@style/txt_000_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="education" />

                <com.newproject.custom.CEditTextView
                    android:id="@+id/edtEducation"
                    style="@style/txt_000_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="surname"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />

                <com.newproject.custom.CTextViewB
                    style="@style/txt_000_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="name" />

                <com.newproject.custom.CEditTextView
                    android:id="@+id/edtName"
                    style="@style/txt_000_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="surname"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />

                <com.newproject.custom.CTextViewB
                    style="@style/txt_000_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Occupation" />

                <com.newproject.custom.CEditTextView
                    android:id="@+id/edtOccupation"
                    style="@style/txt_000_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="name"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />

                <com.newproject.custom.CTextViewB
                    style="@style/txt_000_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Phone No." />

                <com.newproject.custom.CEditTextView
                    android:id="@+id/edtPhone"
                    style="@style/txt_000_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />





                <com.newproject.custom.CButtonViewB
                    style="@style/txt_000_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:gravity="center"
                    android:onClick="@{(v)->viewClickHandler.onAddMember(v)}"
                    android:padding="@dimen/_12sdp"
                    android:singleLine="true"
                    android:text="Add Person"
                    android:textAllCaps="false" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>