<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewClickHandler"
            type="com.newproject.ui.clients.viewmodel.ClientsViewModel.ViewClickHandler" />

        <variable
            name="viewModel"
            type="com.newproject.ui.clients.viewmodel.ClientsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical"
        tools:context=".ui.clients.view.ClientsActivity">

        <include
            android:id="@+id/topbar"
            layout="@layout/topbar" />

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <com.newproject.custom.CTextViewSB
                            style="@style/txt_000_9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/clients" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgFilter"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:visibility="gone"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_filter" />

                        <com.newproject.custom.CTextViewSB
                            style="@style/txt_555_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="@string/filter" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@drawable/shape"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_search_24" />

                        <com.newproject.custom.CEditTextViewSB
                            style="@style/txt_000_7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@null"
                            android:hint="@string/search" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvAddaress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/_3sdp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_clients1" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#ebebeb"
                            android:gravity="center_vertical" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1.4"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.newproject.custom.CTextViewB
                                        style="@style/txt_text_10"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:paddingStart="1dp"
                                        android:text="@string/details" />

                                    <com.newproject.custom.CTextView
                                        style="@style/txt_blue_8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:paddingStart="1dp"
                                        android:text="@string/edit" />

                                </LinearLayout>

                                <com.newproject.custom.CTextView
                                    style="@style/txt_black_7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:paddingStart="1dp"
                                    android:text="@string/company_name" />

                                <com.newproject.custom.CTextView
                                    android:id="@+id/txtCompanyName"
                                    style="@style/txt_text_9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:paddingStart="1dp"
                                    android:text="@string/hudson_mertz_and_hodkiewicz_cli" />

                                <com.newproject.custom.CTextView
                                    style="@style/txt_black_7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:paddingStart="1dp"
                                    android:text="@string/person_name" />

                                <com.newproject.custom.CTextView
                                    android:id="@+id/txtPersonName"
                                    style="@style/txt_text_9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingStart="1dp"
                                    android:text="@string/dr_tamia_shields_dds" />

                                <com.newproject.custom.CTextView
                                    style="@style/txt_black_7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:paddingStart="1dp"
                                    android:text="@string/area" />

                                <com.newproject.custom.CTextView
                                    android:id="@+id/txtArea"
                                    style="@style/txt_text_9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingStart="1dp"
                                    android:text="@string/abu_hail" />

                                <com.newproject.custom.CTextView
                                    style="@style/txt_black_7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:paddingStart="1dp"
                                    android:text="@string/city" />

                                <com.newproject.custom.CTextView
                                    android:id="@+id/txtCity"
                                    style="@style/txt_text_9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:gravity="center"
                                    android:paddingStart="1dp"
                                    android:text="@string/sharjah" />

                                <com.newproject.custom.CButtonView
                                    android:id="@+id/createNewTaskBtn"
                                    style="@style/txt_blue_8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:background="@drawable/shape11"
                                    android:gravity="center"
                                    android:onClick="@{(v)->viewClickHandler.onCreateNewTask(v)}"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:text="@string/create_new_task"
                                    android:textAllCaps="false" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="#ebebeb"
                                    android:gravity="center_vertical" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp">

                                    <com.newproject.custom.CTextViewB
                                        style="@style/txt_text_9"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:paddingStart="1dp"
                                        android:text="@string/visit_history" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <com.newproject.custom.CTextView
                                        style="@style/txt_000_7"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:padding="@dimen/_2sdp"
                                        android:paddingStart="1dp"
                                        android:text="@string/pupose" />

                                    <com.newproject.custom.CTextView
                                        style="@style/txt_000_7"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:padding="@dimen/_2sdp"
                                        android:paddingStart="1dp"
                                        android:text="@string/datetxt" />

                                    <com.newproject.custom.CTextView
                                        style="@style/txt_000_7"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:padding="@dimen/_2sdp"
                                        android:text="@string/status" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:background="#ebebeb"
                                    android:gravity="center_vertical" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvVisitHistory"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    tools:listitem="@layout/item_clients2_visit_history" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>