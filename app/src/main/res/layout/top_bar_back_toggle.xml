<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isBackShow"
            type="java.lang.Boolean" />


        <variable
            name="isSettingShow"
            type="java.lang.Boolean" />


        <variable
            name="isLayoutShow"
            type="java.lang.Boolean" />

        <variable
            name="isTextShow"
            type="java.lang.Boolean" />

        <variable
            name="isEditShow"
            type="java.lang.Boolean" />

        <variable
            name="isCenterTextShow"
            type="java.lang.Boolean" />

        <variable
            name="isAddFriendShow"
            type="java.lang.Boolean" />

        <variable
            name="isBackRoundedShow"
            type="java.lang.Boolean" />

        <variable
            name="isStartTextShow"
            type="java.lang.Boolean" />

        <variable
            name="isStartText1Show"
            type="java.lang.Boolean" />

        <variable
            name="isHeadPhonesShow"
            type="java.lang.Boolean" />

        <variable
            name="topBarClickListener"
            type="com.newproject.interfaces.TopBarClickListener" />


    </data>


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_back_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
            app:theme="@style/ToolbarTheme">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:onClick="@{(v)->topBarClickListener.onTopBarClickListener(v,@string/back)}"
                        android:src="@drawable/ic_baseline_arrow_back_24" />

                    <com.newproject.custom.CTextView
                        android:id="@+id/txtCenterText"
                        style="@style/txt_000_10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:text="@string/top_bar_text_back" />

                <LinearLayout
                    android:id="@+id/toggle_top_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:gravity="center_vertical">

                    <com.newproject.custom.CTextViewSB
                        style="@style/txt_000_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:text="@string/start_visit" />


                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/switchStartVisit"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:onClick="@{(v)->topBarClickListener.onTopBarClickListener(v,@string/switch_start_visit)}"
                        android:button="@drawable/toggle_btn"
                        android:contentDescription="@null" />
                </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
</layout>