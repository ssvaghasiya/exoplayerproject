<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resistentorindifferent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.newproject.custom.CTextView
                style="@style/txt_black_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="1dp"
                android:text="@string/reason" />

            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/shape7"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerReason"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:overlapAnchor="false"
                    android:spinnerMode="dropdown" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <com.newproject.custom.CTextView
                style="@style/txt_black_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="1dp"
                android:text="@string/comments" />

            <com.newproject.custom.CEditTextView
                android:id="@+id/reasonComment"
                style="@style/txt_editText_10"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/shape7"
                android:gravity="start"
                android:hint="@string/enter_comments"
                android:inputType="text" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
